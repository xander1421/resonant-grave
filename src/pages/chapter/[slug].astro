---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { marked } from 'marked';
import fs from 'fs/promises';
import path from 'path';

export async function getStaticPaths() {
  // Define all available chapters
  const chapters = [
    {
      slug: '1',
      number: 1,
      title: 'The Crucible',
      frequency: '42.7',
      prevChapter: null,
      nextChapter: 2,
      contentFile: 'chapter-1.md'
    },
    {
      slug: '2',
      number: 2,
      title: 'The Silence After',
      frequency: 'NULL',
      prevChapter: 1,
      nextChapter: null,
      contentFile: 'chapter-2.md'
    }
  ];

  return chapters.map(chapter => ({
    params: { slug: chapter.slug },
    props: { chapter }
  }));
}

const { chapter } = Astro.props;

// Read the markdown content
const chapterPath = path.join(process.cwd(), 'src', 'content', chapter.contentFile);
const chapterContent = await fs.readFile(chapterPath, 'utf-8');

// Parse the content
const htmlContent = marked(chapterContent);
---

<BaseLayout title={`Chapter ${chapter.number}: ${chapter.title}`}>
  <div class="progress-bar">
    <div class="progress-fill"></div>
    <div class="progress-glow"></div>
  </div>
  
  <article class="chapter-container">
    <header class="chapter-header">
      <div class="chapter-nav">
        <a href="/chapters" class="back-link">
          <span>←</span> ALL TRANSMISSIONS
        </a>
      </div>
      
      <div class="chapter-info">
        <span class="chapter-label">CHAPTER {chapter.number.toString().padStart(2, '0')}</span>
        <h1 class="chapter-title glitch" data-text={chapter.title}>{chapter.title}</h1>
        <div class="chapter-stats">
          <span class="stat">
            <span class="stat-label">FREQUENCY:</span>
            <span class="stat-value frequency-display">{chapter.frequency === 'NULL' ? 'NULL' : `${chapter.frequency} Hz`}</span>
          </span>
        </div>
      </div>
    </header>

    <div class="chapter-content" set:html={htmlContent} />

    <footer class="chapter-footer">
      <div class="chapter-nav-bottom">
        {chapter.prevChapter && (
          <a href={`/chapter/${chapter.prevChapter}`} class="nav-button prev">
            <span>← PREVIOUS</span>
            <span class="nav-title">CHAPTER {chapter.prevChapter.toString().padStart(2, '0')}</span>
          </a>
        )}
        
        <div class="end-marker">
          <span class="pulse-dot"></span>
          <span>END OF TRANSMISSION</span>
          <span class="pulse-dot"></span>
        </div>
        
        {chapter.nextChapter ? (
          <a href={`/chapter/${chapter.nextChapter}`} class="nav-button next">
            <span>NEXT →</span>
            <span class="nav-title">CHAPTER {chapter.nextChapter.toString().padStart(2, '0')}</span>
          </a>
        ) : (
          <a href="/chapters" class="nav-button next">
            <span>MORE →</span>
            <span class="nav-title">COMING SOON</span>
          </a>
        )}
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .chapter-container {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Chapter header */
  .chapter-header {
    margin-bottom: 3rem;
    background: none;
    border: none;
    box-shadow: none;
  }

  .chapter-nav {
    margin-bottom: 2rem;
  }

  .back-link {
    color: var(--color-text-dim);
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .chapter-info {
    text-align: center;
  }

  .chapter-label {
    color: var(--color-text-dim);
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    display: block;
    margin-bottom: 0.5rem;
  }

  .chapter-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
    text-shadow: 0 0 20px rgba(0, 255, 204, 0.3);
  }

  .chapter-stats {
    display: flex;
    justify-content: center;
    font-size: 0.9rem;
  }

  .stat {
    display: flex;
    gap: 0.5rem;
  }

  .stat-label {
    color: var(--color-text-dim);
  }

  .stat-value {
    color: var(--color-accent);
    font-family: 'Orbitron', monospace;
  }

  .frequency-display {
    animation: freq-flicker 5s infinite;
  }

  @keyframes freq-flicker {
    0%, 100% {
      opacity: 1;
    }
    95% {
      opacity: 0.7;
    }
  }

  /* Progress bar */
  .progress-bar {
    width: 100%;
    height: 2px;
    background: var(--color-surface);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1001;
    overflow: hidden;
  }

  .progress-fill {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 0;
    background: var(--color-primary);
    transition: width 0.3s ease;
  }

  .progress-glow {
    position: absolute;
    top: -5px;
    left: 0;
    height: 12px;
    width: 0;
    background: var(--color-primary);
    filter: blur(8px);
    opacity: 0.5;
    transition: width 0.3s ease;
  }

  /* Chapter content styling */
  .chapter-content {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 4rem;
  }

  .chapter-content h1,
  .chapter-content h2,
  .chapter-content h3 {
    font-family: 'Orbitron', monospace;
    color: var(--color-primary);
    margin: 2.5rem 0 1.5rem;
    position: relative;
  }

  .chapter-content h1 {
    font-size: 2.5rem;
  }

  .chapter-content h2 {
    font-size: 2rem;
  }

  .chapter-content h3 {
    font-size: 1.5rem;
    color: var(--color-secondary);
  }

  .chapter-content p {
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
  }
  
  .chapter-content p:first-child {
    margin-top: 0;
  }
  
  .chapter-content p:last-child {
    margin-bottom: 0;
  }

  .chapter-content em {
    color: var(--color-text-dim);
    font-style: italic;
  }

  .chapter-content strong {
    color: var(--color-accent);
    font-weight: 700;
  }

  .chapter-content blockquote {
    border-left: 3px solid var(--color-secondary);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    background: linear-gradient(90deg, rgba(255, 0, 110, 0.1) 0%, transparent 100%);
    font-style: italic;
    color: var(--color-text-dim);
  }

  .chapter-content blockquote p {
    margin-bottom: 0.5rem;
  }

  .chapter-content blockquote p:last-child {
    margin-bottom: 0;
  }

  .chapter-content hr {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, var(--color-primary) 50%, transparent 100%);
    margin: 3rem 0;
    position: relative;
  }

  .chapter-content hr::after {
    content: '◈';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--color-bg);
    color: var(--color-primary);
    padding: 0 1rem;
    font-size: 1.5rem;
  }

  /* Code block styling */
  .chapter-content pre {
    background: var(--color-surface);
    border: 1px solid rgba(0, 255, 204, 0.2);
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
    border-radius: 4px;
    font-family: 'Share Tech Mono', monospace;
  }

  .chapter-content code {
    font-family: 'Share Tech Mono', monospace;
    color: var(--color-accent);
    background: rgba(255, 183, 0, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
  }

  .chapter-content pre code {
    background: none;
    padding: 0;
    color: var(--color-text);
  }

  /* Chapter footer */
  .chapter-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 255, 204, 0.2);
  }

  .chapter-nav-bottom {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 2rem;
  }

  .nav-button {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-decoration: none;
    padding: 1rem 1.5rem;
    border: 1px solid rgba(0, 255, 204, 0.3);
    background: var(--color-surface);
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 20px rgba(0, 255, 204, 0.2);
  }

  .nav-button span:first-child {
    color: var(--color-text-dim);
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }

  .nav-title {
    color: var(--color-primary);
    font-family: 'Orbitron', monospace;
    font-weight: 700;
  }

  .nav-button.prev {
    justify-self: start;
  }

  .nav-button.next {
    justify-self: end;
    text-align: right;
  }

  .end-marker {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--color-text-dim);
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }

  .pulse-dot {
    width: 8px;
    height: 8px;
    background: var(--color-primary);
    border-radius: 50%;
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(0.8);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .chapter-title {
      font-size: 2.5rem;
    }
    
    .chapter-stats {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .chapter-nav-bottom {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .nav-button {
      width: 100%;
    }
    
    .nav-button.prev,
    .nav-button.next {
      justify-self: stretch;
      text-align: center;
    }
  }
</style>

<script>
  // Reading progress bar
  const progressFill = document.querySelector('.progress-fill') as HTMLElement;
  const progressGlow = document.querySelector('.progress-glow') as HTMLElement;
  
  function updateProgress() {
    const windowHeight = window.innerHeight;
    const documentHeight = document.documentElement.scrollHeight;
    const scrolled = window.scrollY;
    const progress = (scrolled / (documentHeight - windowHeight)) * 100;
    
    if (progressFill) progressFill.style.width = `${progress}%`;
    if (progressGlow) progressGlow.style.width = `${progress}%`;
  }
  
  window.addEventListener('scroll', updateProgress);
  window.addEventListener('resize', updateProgress);
  updateProgress();
</script>